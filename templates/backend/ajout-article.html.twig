{% extends 'baseBackend.html.twig' %}


{% block title %}
	{{ parent() }}
	Creation d'articles

{% endblock %}

{% block stylesheets %}
	{{ parent() }}

	<link rel="stylesheet" href={{asset("css/article-show.css")}}>




{% endblock %}


{% block contenu %}


	<!-- Page Content -->
	<div class="container bodyblog">


		<div class="row">
			<div class="col-lg-12 text-right" style="font-size: 2rem;">
				<a href="../uploads/docs/CreationArticles_WeddingYourself_Notice.pdf" target="_blank">
					<i class="fa fa-info-circle fa-lg" style="color: black" aria-hidden="true"></i>
				</a>
			</div>

			<!-- Blog Entries Column -->
			<div class="col-lg-8">
				{{ form_start(form, {'attr': {'id': 'formarticlecreate'}}
				) }}
				<!-- Title -->
				<div class="form-group">
					{{ form_label(form.titre, "Titre de l'article ", {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}
					) }}

				</div>


				<hr>

				<!-- Contenu + Extrait-->


				<!-- Contenu + Extrait-->
				<div class="form-group">
					{{ form_label(form.contenu, "Contenu de l'article", {'label_attr': {'class': 'fontweight-bold'}}
					) }}
					{{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}
					) }}
				</div>

				<hr>

				<input type="submit" onclick="verifier()" value="AperÃ§u" style="color: #fff;background-color: #cab437;padding: 10px 20px;text-transform: uppercase;border-radius: 45px;font-size: 14px;border: 1px solid #cab437;">


				<hr>



				<div class="form-group">
					{{ form_label(form.url, "URL de l'article", {'label_attr': {'class': 'fontweight-bold'}}
					) }}
					{{ form_widget(form.url, {'attr': {'class': 'form-control'}}
					) }}
				</div>

				<hr>

				<div class="form-group" >
					{{ form_label(form.categories, "Categorie de l'article", {'label_attr': {'class': 'fontweight-bold'}}
					) }}
					{{ form_widget(form.categories, {'attr': {'class': 'form-control'}}
					) }}
				</div>

				<hr>

				<div class="form-group"  >
					{{ form_label(form.image, "Image de l'article", {'label_attr': {'class': 'fontweight-bold'}}
					) }}
					{{ form_widget(form.image, {'attr': {'class': 'form-control'}}
					) }}
				</div>


				<div class="form-group mx-auto text-center">
					{{ form_widget(form.envoyer, { 'label': "Envoyer", 'attr': {'class': 'btn font-weightbold bg-primary text-white text-center', "onclick": "envoie()"}}
					) }}
				</div>

				{{ form_end(form) }}
			</div>

			<!-- Mettre Widget Aussi-->
			<div class="col-lg-4"> {% block widget %}{% endblock %}
			</div>
		</div>
		<!-- /.row -->

	</div>
	<!-- /.container -->
<script type="text/javascript" src="js/apercu-ajout.js"></script>


	{% block javascripts %}
	<script>
	$(function () {
	$('[data-id = date]').hide();
	});
	</script>
	{% endblock %}
	<!-- Fin corp du blog -->
{% endblock %}