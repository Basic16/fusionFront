{% extends 'baseBackend.html.twig' %}

{% block title %}
	{{ parent() }}
	{{article.titre}}




{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style>
	img {
            max-width: 50em;
        }
	</style>

	<link rel="stylesheet" href={{asset("css/article-show.css")}}>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sceditor/2.1.3/themes/content/default.min.css" integrity="sha512-HFIO3TSewWJuQyXDMtoX7CvpEKMrkduO8j5dKPeF9smntHrFw402Jyy3CllTTpwonVp792hg/kp1iOK+85QCNQ==" crossorigin="anonymous" />
{% endblock %}

{% block stylesheetsspan %}
{{ parent() }}
{% endblock %}

{% block contenu %}
	<div class="container-fluid pb-2 mb-2">
		<div class="row">
			<div class="col-12 text-center p-0 m-0">
				<img src="https://zupimages.net/up/20/50/lsxc.jpg" alt="" class="img-fluid">
			</div>
		</div>
	</div>

	<!-- Page Content -->
	<div class="container bodyblog">

		<div
			class="row">

			<!-- Blog Entries Column -->
			<div
				class="col-lg-8">

				<!-- Title -->
				<h1 class="mt-4">
					{{article.titre}}
				</h1>

				<!-- Author -->
				<p class="lead">
					par
					<a href="#">
						Wedding Yourself
					</a>
				</p>

				<hr>

				<!-- Date/Time -->
				<p>
					Publi√© le
					{{ article.date |format_datetime(locale='fr', pattern='dd MMMM Y') }}
				</p>

				<hr>
				<div class="row">
				
					<div class="col col-md" style="margin-bottom: 15px;">
						{{ article.contenu | raw }}
					</div>

				</div>
				<hr>
				{% include 'reseauxsociaux/facebook.html.twig' %}
				<hr>
				<!-- commentaire -->

				
				<div>
					
					</form>
					{% include 'backend/commentaires.html.twig' %}
				</div>

			</div>
			
			<!-- Mettre Widget Aussi-->
			<div class="col-lg-4">
				{% block widget %}
					{% include 'backend/widget.html.twig' %}
					
				{% endblock %}
			</div>
		</div>
		<!-- /.row -->

	</div>
	<!-- /.container -->

	<!-- Fin corp du blog -->
{% endblock %}
