{% block contenu %}

	<!-- Corp du blog -->
	<style media="screen">
		.gallery {
			margin-bottom: 20px;
		}
		.gallery-title
		{
			font-size: 36px;
			color: #42B32F;
			text-align: center;
			font-weight: 500;
			margin-bottom: 70px;
		}
		.gallery-title:after {
			content: "";
			position: absolute;
			width: 7.5%;
			left: 46.5%;
			height: 45px;
			border-bottom: 1px solid #5e5e5e;
		}
		.filter-button
		{
			font-size: 16px;
			border: 1px solid #cab437;
			background-color: #fff;
			border-radius: 5px;
			text-align: center;
			color: #cab437 !important;
			margin-bottom: 10px;

		}
		.filter-button:hover
		{
			font-size: 16px;
			border: 1px solid #cab437;
			border-radius: 5px;
			text-align: center;
			color: #ffffff !important;
			background-color: #cab437;

		}
		.btn-default:active .filter-button:active
		{
			background-color: #42B32F;
			color: white;
		}

	</style>


	<a class="top-link hide btn-card" style="" href="{{ path('ajoutArticle') }}" id="js-button">
		
		<span title="Ajouter un article" class="screen-reader-text" style="font-size: 3em; color: black">
			<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
		</span>
	</a>

	<a class="top-link2 hide btn-card" style="" href="{{ path('listeCategorie') }}" id="js-button">
	
		<span title="Ajouter une categorie" class="screen-reader-text" style="font-size: 3em; color: black">
			<i class="fa fa-tags" aria-hidden="true"></i>
		</span>
	</a>

	<a class="top-link3 hide btn-card" style="" href="{{ path('galerie') }}" id="js-button">
		
		<span title="Ajouter une photo" class="screen-reader-text" style="font-size: 3em; color: black">
			<i class="fa fa-file-image-o" aria-hidden="true"></i>
		</span>
	</a>

	<!-- details card section starts from here -->
	<section class="details-card">
		<div class="container">
			<div class="row">
				<div class="col-xl-6 mx-auto text-center">
					<div class="section-title mb-100">
						<h4>
							Blog
						</h4>
					</div>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="gallery text-center col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div>
						{% for cat in categories %}
							<a class="btn btn-default filter-button" href="{{path('articles_par_categorie',{'libelle':cat.libelle})}}">{{cat.libelle}}</a>
						{% endfor %}
					</div>
				</div>
			</div>
			<br>

	
			<div class="row">

				{% for article in articles %}

					<div class="col-md-4 text-center">
						<div class="card-content">
							<div class="card-img">
								{% if article.image is null%}

									<img src="https://cdn.pixabay.com/photo/2014/02/07/11/36/couple-260899_960_720.jpg" alt="">
								{% else %}
									{{ article.image | raw}}
								{% endif %}
								<span>
									<h4>
										{{article.categorie.libelle}}
									</h4>
								</span>
							</div>
							<div class="card-desc">
								<h3>
									{{ article.titre }}
								</h3>
								<p>
									{{ article.extrait }}
								</p>
								<a href="{{ path('article_show', {'url':article.url})}}" class="btn-card">
									Lire la suite
								</a>
							</br>

							<a href="{{path('modifierArticle',{'id': article.id})}}">
								<i class="fa fa-pencil" aria-hidden="true" style="margin-right: 25px;color: black"></i>

							</a>

							<a href="{{path('delete_article',{'id':article.id})}}">
								<i class="fa fa-trash" aria-hidden="true" style="margin-top: 25px;color: black"></i>

							</a>
						</br>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div></section>{% endblock %}

