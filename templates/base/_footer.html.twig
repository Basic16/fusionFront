/* ICI COMMENCE LE CSS DU FOOTER DE L'ANCIEN FOOTER EN BOOTSTRAP 3 */

footer {
  padding: 60px 0;
}

footer .section-title {
  text-align: center;
  color: #007b5e;
  margin-bottom: 50px;
  text-transform: uppercase;
}
#footer {
  background: #6c757d !important;
  padding-top: 50px;
  padding-bottom: 60px;
}
#footer h5{
padding-left: 10px;
  border-left: 3px solid #eeeeee;
  padding-bottom: 6px;
  margin-bottom: 20px;
  color:#ffffff;
}
#footer a {
  color: #ffffff;
