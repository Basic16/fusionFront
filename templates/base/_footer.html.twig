  font-size: 1.25rem;
  font-weight: 500;
  line-height: 1.2;
}

#footer .fa {
  color: #F9F871;
}

@media (max-width:767px){
  #footer {
    text-align: center;
  }

  #footer ul.social li a i {
    padding-top: 20px;
  }

}

/* ICI FINI LE CSS DU FOOTER POUR BOOTSTRAP 3*/
</style>

