{% extends 'blog/baseApercu.html.twig' %}

{% block title %}
	{{ parent() }}
		Aperçu


{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style>
	img {
            max-width: 50em;
        }
	</style>

	<link rel="stylesheet" href={{asset("css/article-show.css")}}>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sceditor/2.1.3/themes/content/default.min.css" integrity="sha512-HFIO3TSewWJuQyXDMtoX7CvpEKMrkduO8j5dKPeF9smntHrFw402Jyy3CllTTpwonVp792hg/kp1iOK+85QCNQ==" crossorigin="anonymous"/>
{% endblock %}


{% block contenu %}
	<body>
		<div class="container-fluid pb-2 mb-2">
			<div class="row">
				<div class="col-12 text-center p-0 m-0">
					<img src="https://zupimages.net/up/20/50/lsxc.jpg" alt="" class="img-fluid">
				</div>
			</div>
		</div>

		<!-- Page Content -->
		<div class="container bodyblog">

			<div
				class="row">

				<!-- Blog Entries Column -->
				<div
					class="col-lg-8">

					<!-- Title -->
					<h1 class="mt-4">


						{{ titreAjout | raw }}
						{{ titre | raw }}

					</h1>

					<!-- Author -->
					<p class="lead">
						par
						<a href="#">
							Wedding Yourself
						</a>
					</p>

					<hr>

					<h6 class="mt-4">
						Publié le
						{{ date | format_datetime(locale='fr', pattern='dd MMMM Y') }}
					</h6>

					<hr>
					<div id="apercuShow" name="apercu" class="container-fluid">


						{{ contenuAjout | raw }}
						{{ contenu | raw }}


					</div>
					<hr>

				</div>


				<!-- Mettre Widget Aussi-->
				<div class="col-lg-4">
					
					<div class="card my-3">
						<h5 class="card-header">
							Articles récents
						</h5>
						<div class="card-body">
							<ul class="list-unstyled mb-0">
								
									<li>
									Article 1
									</li>
										<li>
									Article 2
									</li>
										<li>
									Article 3
									</li>
								
							</ul>
						</div>
					</div>
					<div class="card my-3">
						<h5 class="card-header">
							Catégories
						</h5>
						<div class="card-body">
							<div class="row">
								<div class="col-lg-6">
									<ul class="list-unstyled mb-0">

										<li>
											Catégorie 1
										</li>
										<li>
											Catégorie 2
										</li>
										<li>
											Catégorie 3
										</li>


									</ul>
								</div>

							</div>
						</div>
					</div>
				</div>

			</div>
			<!-- /.row -->

		</div>
		<!-- /.container -->
	</body>
	<!-- Fin corp du blog -->
{% endblock %}
