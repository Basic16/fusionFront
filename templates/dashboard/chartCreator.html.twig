{% extends 'baseBackend.html.twig' %}


{% block title %}
	{{ parent() }}

{% endblock %}

{% block contenu %}
	<div
		class="container-fluid">

		<!-- Premiere ligne, pour choisir le 1er choix-->
		<div class="row justify-content-md-center" id='firstRow'>
			<div class="btn-group" role="group" aria-label="Basic example">
				<a href="#" id='1' class="btn btn-secondary btn-icon-split">
					<span class="icon text-white-50">
						<i class="fas fa-flag"></i>
					</span>
					<span class="text">Derniers Inscrits</span>
				</a>
				<button type="button" class="btn btn-secondary" id='2'>Option 2</button>
				<button type="button" class="btn btn-secondary" id='3'>Option 3</button>
			</div>
		</div>


		<!--2e ligne qui va apparaitre en fonction du 1er choix-->
		<div class="row mt-2 justify-content-md-center" id='secondRow'>
			<div class="btn-group" role="group" aria-label="Basic example">
				<button type="button" class="btn btn-secondary" id='11'>Jour</button>
				<button type="button" class="btn btn-secondary" id='12'>Semaine</button>
				<button type="button" class="btn btn-secondary" id='13'>Mois</button>
				<button type="button" class="btn btn-secondary" id='14'>Ann√©e</button>
			</div>
		</div>
	</div>


	<!-- Content Row -->

	<div
		class="row mt-4 justify-content-md-center" id='thirdRow'>
		<!-- Area Chart -->
		<div class="col-xl-8 col-lg-7">
			<div
				class="card shadow mb-4">
				<!-- Card Header - Dropdown -->
				<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
					<h6 class="m-0 font-weight-bold text-primary" id='graphTitle'></h6>
					<div class="dropdown no-arrow">
						<a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							<i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
						</a>
					</div>
				</div>
				<!-- Card Body -->
				<div class="card-body">
					<div class="chart-area">
						<canvas id="annoncesParCat"></canvas>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<!-- Page level plugins -->
	<script src="vendor/chart.js/Chart.min.js"></script>

	<!-- Page level custom scripts -->
	<script src="js/chartCreator.js"></script>
{% endblock %}
