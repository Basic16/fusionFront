{% block layout %}

	{% trans_default_domain 'cocorico_home' %}

	{% block sub_header %}
		<!-- visual -->
		{# Carousel here #}

		<!-- début new slide -->

			<style media="screen"> .search-sec {
				padding: 0;
			}

			input[type="text"].search-slt::-webkit-input-placeholder {
				/* Chrome/Opera/Safari */
				font-size: 17px;
			}
			input[type="text"].search-slt::-moz-placeholder {
				/* Firefox 19+ */
				font-size: 17px;
			}
			input[type="text"].search-slt:-ms-input-placeholder {
				/* IE 10+ */
				font-size: 17px;
			}
			input[type="text"].search-slt:-moz-placeholder {
				/* Firefox 18- */
				font-size: 17px;
			}
			.search-slt {
				display: block;
				width: 100%;
				font-size: 0.875rem;
				line-height: 1.5;
				color: #55595c;
				background-color: #fff;
				background-image: none;
				border: 1px solid #ccc;
				height: calc(3rem + 2px) !important;
				border-radius: 0;
			}

			.search-sec .btn-default {
				background-color: #cab437;
				color: #fff;
				border-color: #cab437;
				outline: none;
			}

			.search-sec .btn-default:hover {
				background-color: #cab437;
				color: #fff;
				border-color: #cab437;
				outline: none;
			}

			.carousel-inner {
				max-height: 400px;
			}
			.wrn-btn {
				width: 100%;
				font-size: 16px;
				font-weight: 400;
				text-transform: capitalize;
				height: calc(3rem + 2px) !important;
				border-radius: 0;
			}
			@media(min-width: 992px) {
				.search-sec {
					position: relative;
					top: -200px;
					margin-bottom: -150px;
					/*background: rgba(0,0,0,.4);*/
					transition: 0.3s ease opacity;
					margin-right: 250px;
					margin-left: 250px;

				}
			}

			.searchweddpad {
				/*background: rgba(0,0,0,.4);
                  transition: .3s ease opacity;*/
				padding: 20px;
				/*margin-left: 150px;
                  margin-right: 150px;*/
			}
			@media(max-width: 992px) {
				.search-sec {
					background: #fff;
					margin-bottom: 20px;
				}

				.search-sec h1 {
					margin-left: 0 !important;
					margin-right: 0 !important;
					background: rgba(0, 0, 0, .8);
				}
				.carousel-inner {
					margin-top: 20px;
				}

				.searchweddpad {
					background: none;
					padding: 20px;
					margin-left: 0;
					margin-right: 0;
				}
			}

			.search-sec h1 {
				font-family: Merriweather, "Times New Roman", Times, serif;
				font-size: 25px;
				/*line-height: 42px;*/
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				font-weight: 700;
				margin-top: 20px;
				color: #fff;
				/*background: rgba(0,0,0,.8);*/

				padding: 5px
			}
		</style>

		<section>
			<div id="carouselExampleFade" class="carousel slide carousel-fade carouselwedd" data-ride="carousel">
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img src="https://www.zupimages.net/up/21/02/zi4o.png" class="d-block w-100" alt="...">
					</div>
					<div class="carousel-item">
						<img src="https://www.zupimages.net/up/21/02/iomy.png" class="d-block w-100" alt="...">
					</div>
					<div class="carousel-item">
						<img src="https://www.zupimages.net/up/21/02/45k5.png" class="d-block w-100" alt="...">
					</div>
				</div>
			</div>
		</section>
		<section class="search-sec">
			<div class="container">
				<form action="{{path("recherche")}}" method="post" novalidate="novalidate">
					<div class="row text-center justify-content-md-center">
						<div class="col-md-12">
							<h1>Réalisez vous-même tous vos événements</h1>
						</div>
					</div>
					<div class="row justify-content-md-center searchweddpad">
						<div class="col-md-9 col-sm-12 p-0">
							<input type="text" name="recherche" class="form-control search-slt" placeholder="Que cherchez-vous ?">
						</div>

						<div class="col-md-3 col-sm-12 p-0">
							<button type="submit" name="validBt" class="btn btn-default wrn-btn">Rechercher</button>
						</div>
					</div>
				</form>
			</div>
		</section>

		<!--<a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a> <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a> </div> -->
		<!--new slide end-->
	{% endblock %}

