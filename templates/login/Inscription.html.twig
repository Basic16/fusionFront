					{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.confirmation, 'Confirmation', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.confirmation, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.lastname, 'Nom ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.firstname, 'Prénom ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}

