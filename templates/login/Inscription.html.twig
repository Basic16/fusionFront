{% extends 'base.html.twig' %}

{% block title %}Hello InscriptionController!
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">S'inscrire</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-8 bg-white p-4 m-0 text-primary">

				{{ form_start(form) }}

				
					{{ form_label(form.username, 'E-mail', {'label_attr': {'class': 'font-weight-bold'}}) }}
